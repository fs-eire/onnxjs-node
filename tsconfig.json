{
    "include": [
      "lib",
      "scripts",
      "test"
    ],
    "compileOnSave": true,
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "target": "es5",
      "lib": [
        "es2015",
        "dom",
      ],
      "sourceMap": true,
      "noUnusedLocals": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "strictNullChecks": true,
      "noUnusedParameters": false,
      "pretty": true,
      "allowUnreachableCode": false,
      "experimentalDecorators": true,
      "downlevelIteration": true
    }
  }
  